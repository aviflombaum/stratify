<!DOCTYPE html>
<html>
<head>
  <title>Stratify</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <h1>Stratify</h1>
  </header>
  <div id="content">
    <ul id="flash">
      <% [:success, :notice, :error].each do |type| %>
        <% next unless flash[type].present? %>
        <li class="<%= type %>"><%= flash[type] %></li>
      <% end %>
    </ul>
  	<div id="mainContent">
      <%= yield %>
  	</div>
  	<%= yield :sidebar %>
  </div>
</body>
</html>
